@import '../../variables.styl'

.Movie
  position relative
  display flex
  flex-direction column
  justify-content flex-end
  flex 0 0 auto
  width w = 300px
  height h = 450px
  border-radius $default-radius
  color $white
  overflow hidden
  margin 20px 20px
  cursor pointer
  transition all .5s

  &:hover
    height  h * 1.15

  h3
    margin 0

  figure
    position absolute
    top 0
    left 0
    z-index -1
    margin 0
    height 100%
    width 100%
    &::after
      content ""
      position absolute
      top 0
      left 0
      z-index 1
      width: 100%
      height 100%
      background linear-gradient(
        180deg,
        transparent 0%,
        rgba($primary, 0.8) 100%
      )

    img
      height 100%
      width 100%
      object-fit cover

  &__rank
    position absolute
    top 0
    right 0
    padding 5px 10px
    height 20px
    margin 20px 20px 0 0
    border-radius $default-radius * 2
    background-color rgba($primary, 0.7)

  &__info
    padding 10px

  &__overview
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;


